<%
collection ||= []
hideAddButton ||= false
%>
	
<table class="mmTable">
	<tr>
		<th><%= t("activerecord.attributes.topic.name") %></th>
		<th><%= t("activerecord.attributes.topic.topic_id") %></th>
		<th><%= t("activerecord.attributes.topic.wbtCount") %></th>
		<th><%= t("activerecord.attributes.topic.subTopicCount") %></th>
		<th colspan="3"></th>
	</tr>
	<% collection.each do |topic| %>
	<tr>
		<td><%= topic.name %></td>
		<td><%= topic.topic.name %></td>
		<%
		begin
			users_rank = topic.assessments.select("rank_id").where("user_id = ?", current_user.id).first.rank.id
		rescue
			users_rank = 1
		end
		%>
		<td><%= topic.wbts.where("rank_id <= ?", users_rank).count %></td>
		<td><%= topic.topics.count %></td>
		<td>
		<% if can? :read, topic %>
			<%= link_to content_tag(:span, "", class: "ui-icon ui-icon-folder-open", title: t("record.title.show")), topic %>
		<% end %>
		</td>
		<td>
		<% if can? :update, topic %>
			<%= link_to content_tag(:span, "", class: "ui-icon ui-icon-wrench", title: t("record.title.update")), edit_topic_path(topic) %>
		<% end %>
		</td>
		<td>
		<% if can? :destroy, topic %>
			<%= link_to content_tag(:span, "", class: "ui-icon ui-icon-trash", title: t("record.title.destroy")), topic, method: :delete, data: { confirm: t("destroy.ensuring") } %>
		<% end %>
		</td>
	</tr>
	<% end %>
</table>

<% if !hideAddButton and can? :create, Topic %>
	<br />
	<%= link_to content_tag(:span, t("topic.add"), class:"button"), new_topic_path %>
	<br /><br />
<% end %>